<div id="table-body">
  <table class="table table-hover">
    <% if ideas.any? %>
      <% ideas.each_with_index do |idea, index| %>
        <tr>
          <td>
            <div class="panel-heading" data-toggle="collapse" data-target="#idea-summary<%= index %>"><h5 class="display-4"><%= idea.title %>  <small class="text-muted"><%= local_time(idea.created_at,'%B %e, %Y')%></small></h5>  <i class="fa fa-arrow-down pull-right" aria-hidden="true"></i></div>

            <div class="collapse panel-body" id="idea-summary<%= index %>" aria-expanded="false"><br><p><%= link_to 'Discuss Idea', idea_path(idea), class: "pull-left" %></p><br><small class="text-muted"><%= idea.summary %></p></small></div>
          </td>
        </tr>
      <% end %>
    <% else %>
      <p>No ideas exist yet.</p>
    <% end %>
  </table>
</div>
